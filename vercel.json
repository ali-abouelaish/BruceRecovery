{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/admin",
      "dest": "/admin"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app/page.tsx": {
      "maxDuration": 30
    },
    "app/admin/page.tsx": {
      "maxDuration": 30
    }
  }
} 